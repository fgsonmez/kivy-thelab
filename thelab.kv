AnchorLayoutExample:

<AnchorLayoutExample>:
	Button:
		# right,left,center
		anchor_x: "left"
		# bottom,top,center
		anchor_y : "left"
		text: "A"
		size_hint: .2, .2
	# Button:
	#	text: "A"
	#	size_hint: .1, .1
	Button:
		text: "A"

<BoxLayoutExample>:
	orientation: "vertical"
	Button:
		text: "A"
		size_hint: 0.5 , 0.5 
		# size: "100dp" ,"80dp"
		# x(start percentage from left), center_x(centers of buttons percentages), right(right corner of buttons percentage)
		# y,center_y, top
		pos_hint: {"center_x":0.5}
	BoxLayout:
		orientation:"horizontal"
		spacing: "10dp"
		Button:
			text: "B1"
			size_hint: 1 , 0.5 
		Button:
			text: "B2"

<MainWidget>:
	Button:
		text: "Hello"
		size: "100dp" ,"80dp"
		pos: "100dp", "200dp" 
		color: 0,0,1,1
	Label: 
		text: "Hello2"
		size: "100dp" ,"80dp"
		pos: "200dp", "300dp" 
		color: 1,0,0,1